project boost/afio
    : requirements
      <threading>multi                          #<-- do we need this?
      <link>shared:<define>BOOST_AFIO_DYN_LINK=1  
      <define>BOOST_AFIO_SOURCE
      <library>../../../NiallsCPP11Utilities//utils 
	: usage-requirements 
      <include>. 
      <link>shared:<define>BOOST_AFIO_DYN_LINK=1
    : source-location ../src

;

lib boost_afio : afio.cpp 
	: <include>../../../boost/afio 
      <toolset>gcc <cxxflags>-std=c++11
      <cxxflags>"-fvisibility-inlines-hidden -std=c++0x -fstrict-aliasing -Wstrict-aliasing -Wall -Wno-unused -fargument-noalias -O2 -g -fPIC -fvisibility=hidden -fopenmp"

;

