* text=auto !eol
*.gitattributes text

# Scriptish formats
*.bat        svneol=native#text/plain
*.bsh        svneol=native#text/x-beanshell
*.cgi        svneol=native#text/plain
*.cmd        svneol=native#text/plain
*.js         svneol=native#text/javascript
*.php        svneol=native#text/x-php
*.pl         svneol=native#text/x-perl
*.pm         svneol=native#text/x-perl
*.py         svneol=native#text/x-python
*.sh         eol=lf svneol=LF#text/x-sh
configure    eol=lf svneol=LF#text/x-sh

